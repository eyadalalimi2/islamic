<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/shape_card"
    android:layoutDirection="rtl"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_qs_aya_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:fontFamily="@font/the_sans"

        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_qs_aya_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_qs_aya_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:text="@string/app_name"
        android:fontFamily="@font/the_sans"

        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_qs_sura_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_qs_aya_text"
        android:layout_margin="8dp"
        android:fontFamily="@font/the_sans"

        android:layout_toStartOf="@id/tv_qs_aya_num"
        android:layout_toLeftOf="@id/tv_qs_aya_num"
        android:text="@string/app_name"
        android:textSize="14sp" />
</RelativeLayout>